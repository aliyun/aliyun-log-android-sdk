<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingTop="12dp"
    android:paddingRight="24dp"
    android:paddingBottom="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/order_image"
        android:layout_width="72dp"
        android:layout_height="72dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/order_image"
        tools:text="order id" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        tools:text="finished" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/order_id_text"
        android:layout_alignBottom="@+id/order_image"
        tools:text="order id" />


</RelativeLayout>