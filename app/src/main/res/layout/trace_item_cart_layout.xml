<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cart_image"
        android:layout_width="72dp"
        android:layout_height="72dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cart_title_text"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/cart_image"
        tools:text="title" />

    <com.aliyun.sls.android.producer.example.example.trace.widget.PriceTextView
        android:id="@+id/cart_price_text"
        style="@style/Text.Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cart_title_text"
        android:layout_alignBottom="@+id/cart_image"
        app:prefixText="单价："
        tools:text="19.9" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cart_count_text"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@+id/cart_image"
        android:layout_alignParentRight="true"
        tools:text="x1" />

</RelativeLayout>